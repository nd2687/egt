<div id="japaneseTemp" %>
<%= render 'shared/form.html.erb' %>

<div class="words">
  <ul>
    <% @words.each do |word| %>
      <li class="word">
        <div class="japanese">
          <%= word.japanese %>
        </div>
        <div class="english" style="display:none;">
          <%= word.english %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= pageless(@words.total_pages, "/japanese/") %>
</div>
</div>
