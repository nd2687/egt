<%= render 'shared/form.html.erb' %>

<div id="newwordSuccess" style="display:none;">データを追加しました！</div>

<div class="words" data-word-type="<%= params[:word_type] %>">
  <% if @words.present? %>
    <% @words.each do |word| %>
    <ul class="wordUl">
      <li class="word">
        <div class="english" style="<%= params[:word_type] == 'ja' ? 'display:none;' : '' %>">
          <%= word.english %>
        </div>
        <div class="japanese" style="<%= params[:word_type] == 'ja' ? '' : 'display:none;' %>">
          <%= word.japanese %>
        </div>
      </li>
      <li class="menu">
      <div class="menuWord" style="display:none;" data-word_id="<%= word.id %>">
          <%= link_to "検索", "#" %>
          <%= link_to "完了", "#" %>
          <%= link_to "編集", [ :edit, word ], id: "ordEdit", remote: true %>
          <button id="editDialog">hoge</button>
          <%= link_to "削除", "#" %>
        </div>
      </li>
    </ul>
    <% end %>
  <% else %>
    <h1>上のコントロールパネルから英単語を登録しよう！</h1>
  <% end %>

  <% if params[:sort_type].present? %>
    <%= pageless(@words.total_pages, root_path + "?sort_type="  + params[:sort_type] + "&word_type=" + params[:word_type]) %>
  <% else %>
    <%= pageless(@words.total_pages, root_path + "?word_type=#{params[:word_type]}") %>
  <% end %>
</div>
