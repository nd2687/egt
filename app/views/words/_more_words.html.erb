<div class="words" data-word-type="<%= params[:word_type] %>">
  <% @words.each do |word| %>
  <ul class="wordUl">
    <li class="word">
      <div class="english" style="<%= params[:word_type] == 'ja' ? 'display:none;' : '' %>">
        <%= word.english %>
      </div>
      <div class="japanese" style="<%= params[:word_type] == 'ja' ? '' : 'display:none;' %>">
        <%= word.japanese %>
      </div>
    </li>
    <li class="menu">
      <div class="menuWord" style="display:none;">
        <%= link_to "検索" %>
        <%= link_to "完了" %>
        <%= link_to "編集" %>
        <%= link_to "削除" %>
      </div>
    </li>
  </ul>
  <% end %>
</div>
