<div class="nav">

  <%= form_for(:word, :url => { :controller => :words, :action => :create,
               :method => :post }, remote: true, class: "clearfix" ) do |f| %>
      <%= f.text_field :english, placeholder: "English" %><br>
      <%= f.text_field :japanese, placeholder: "日本語" %><br>
      <%= f.hidden_field :user_id, value: current_user.id %>
  <% end %>

  <button id="new_word" data-user_id="<%= current_user.id %>">submit</button>

  <div class="boxComplete">
   ここにCompleコンテンツ
  </div>

  <div class="sortTag">
    <button class="sortButton" id="normalSort" data-sort-type=""> 登録(昇順) </button>
    <button class="sortButton" id="reverseSort" data-sort-type="updated_at"> 登録(降順) </button>
    <%#= link_to "月別", "#" %>
    <button class="sortButton" id="alphabetSort" data-sort-type="english"> アルファベット順 </button>
    <%= link_to "日本語", :japanese, :class => "sortButton", :id => "japaneseSort", :data => { :sort_type => "japanese" } %>
    <%= link_to "COMPLETE", "#" %> |
    <%= link_to "EDIT", "#" %>
  </div>
</div>

